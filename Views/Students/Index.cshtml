

@model IEnumerable<Student>

@{ 
    ViewData["Title"] = "List Of Students";

}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AcademicYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentStatus)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.AcademicYear)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.StudentStatus)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@item.id"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-info text-white"  asp-action="Details" asp-route-id="@item.id"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.id"><i class="bi bi-trash"></i>Delete</a>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <div style="position:fixed; right:25px; bottom:50px;" class="text-white">
        <a asp-controller="Students" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
    </div>

</div>



